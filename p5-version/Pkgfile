# Description: Perl library version
# URL: http://search.cpan.org/~jpeacock/
# Maintainer: Simon Gloﬂner, viper at hometux dot de
# Packager: Simon Gloﬂner, viper at hometux dot de

name=p5-version
version=0.76
release=1
source=(http://search.cpan.org/CPAN/authors/id/J/JP/JPEACOCK/version-$version.tar.gz)

build() {
    cd version-$version

    perl Makefile.PL
    make OPTIMIZE="$CFLAGS"
    make DESTDIR=$PKG install

    find $PKG \
	-name .packlist -or \
	-name perllocal.pod -or \
	-name '*.bs' -or \
	-name autosplit.ix | xargs rm
    find $PKG -depth -empty -exec rm -rf {} \;
}
