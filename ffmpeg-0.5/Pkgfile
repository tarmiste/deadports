# Description: Complete solution to record, convert and stream audio and video.
# URL: http://ffmpeg.mplayerhq.hu/
# Maintainer: Danny Rawlins, monster dot romster at gmail dot com
# Packager: Matt Housh, jaeger at crux dot nu
# Depends on: amrnb amrwb faac imlib2 lame libsdl libtheora libxvid x264

name=ffmpeg-0.5
version=0.5
release=1
source=(http://ffmpeg.org/releases/ffmpeg-$version.tar.bz2)

build() {
	cd ffmpeg-$version

	./configure \
		--prefix=/usr \
		--mandir=/usr/man \
		--enable-gpl \
		--enable-libfaac \
		--enable-libfaad \
		--enable-libfaadbin \
		--enable-libmp3lame \
		--enable-libtheora \
		--enable-libvorbis \
		--enable-libx264 \
		--enable-libxvid \
		--enable-shared \
		--enable-pthreads \
		--enable-postproc \
		--enable-swscale \
		--enable-x11grab \
		--enable-libamr-nb \
		--enable-libamr-wb \
		--enable-nonfree \
		--disable-debug \
		--disable-static

	make SHARED_PP='yes'
	make DESTDIR=$PKG install install-man
}
